<mvc:View
    controllerName="legal.document.analyzer.ui.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <customHeader>
                <Bar class="sapUiMediumMargin">
                    <contentLeft>
                        <Title text="{i18n>appTitle}" level="H1"/>
                    </contentLeft>
                    <contentRight>
                        <Button 
                            icon="sap-icon://user-settings" 
                            tooltip="{i18n>userSettings}"
                            press="onUserSettings"/>
                    </contentRight>
                </Bar>
            </customHeader>
        </App>
    </Shell>
</mvc:View>
