<mvc:View controllerName="project1.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt">
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader id="toolHeader">
                <Button id="menuButton" icon="sap-icon://menu2" press="onMenuButtonPress" tooltip="Show/Hide Navigation"/>
                <tnt:ToolHeaderUtilitySeparator id="separator"/>
                <Title id="appTitle" text="Legal Document Analyzer" level="H4"/>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <tnt:SideNavigation id="sideNavigation" expanded="true">
                <tnt:NavigationList id="navigationList">
                    <tnt:NavigationListItem id="dashboardNav" text="Dashboard" icon="sap-icon://business-objects-experience" key="dashboard" select="onNavigationSelect"/>
                    <tnt:NavigationListItem id="documentsNav" text="Documents" icon="sap-icon://document" key="documents" select="onNavigationSelect"/>
                    <tnt:NavigationListItem id="analyticsNav" text="Analytics" icon="sap-icon://pie-chart" key="analytics" select="onNavigationSelect"/>
                    <tnt:NavigationListItem id="settingsNav" text="Settings" icon="sap-icon://action-settings" key="settings" select="onNavigationSelect"/>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <App id="app">
            </App>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>