{
  "name": "legal-document-analyzer",
  "version": "1.0.0",
  "description": "AI-Powered Legal Document Analyzer using SAP BTP, CAPM, HANA Cloud, and GenAI",
  "repository": "https://github.com/MridulSelvakumar/projects.git",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@cap-js/hana": "^2",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@cap-js/cds-types": "^0.13.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "build": "cds build",
    "deploy": "cds deploy",
    "test": "mocha test/**/*.test.js --timeout 10000",
    "test:integration": "mocha test/**/*.integration.test.js --timeout 30000",
    "test:ai": "cd ai-service && python -m pytest test_app.py -v"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "[production]": {
          "kind": "hana-cloud",
          "credentials": {
            "host": "${env:HANA_HOST}",
            "port": "${env:HANA_PORT}",
            "user": "${env:HANA_USER}",
            "password": "${env:HANA_PASSWORD}",
            "database": "${env:HANA_DATABASE}",
            "schema": "${env:HANA_SCHEMA}",
            "encrypt": true,
            "sslValidateCertificate": false
          }
        }
      },
      "vector-db": {
        "kind": "hana-cloud-vector",
        "[development]": {
          "kind": "sqlite-vector"
        }
      }
    },
    "folders": {
      "app": "app/"
    },
    "serve": {
      "index": true
    },
    "hana": {
      "deploy-format": "hdbtable",
      "syntax": "hdi"
    }
  }
}
