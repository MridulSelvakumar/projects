# HANA Cloud Configuration Template
# Copy this file to .env and fill in your HANA Cloud credentials

# HANA Cloud Database Connection
HANA_HOST=your-hana-instance.hanacloud.ondemand.com
HANA_PORT=443
HANA_USER=your-hana-user
HANA_PASSWORD=your-hana-password
HANA_DATABASE=your-database-name
HANA_SCHEMA=your-schema-name

# SAP BTP Configuration
BTP_SUBDOMAIN=your-subdomain
BTP_REGION=your-region
BTP_ORG=your-org
BTP_SPACE=your-space

# AI Service Configuration
OLLAMA_HOST=http://localhost:11434
LLAMA_MODEL=llama3
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Application Configuration
NODE_ENV=production
PORT=4004
AI_SERVICE_PORT=5000

# Security Configuration
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=https://your-app-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Vector Database Configuration
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.7
MAX_CHUNKS_PER_DOCUMENT=100

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,docx,txt,doc

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
